<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_bg</item>

        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FieldEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/spacing_tiny_4</item>
        <item name="android:enabled">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FieldEditText.Single" parent="FieldEditText">
        <item name="android:singleLine">true</item>
    </style>
</resources>